@typeparam TItem

@if (List == null)
{
    @if (NullTemplate != null)
    {
        @NullTemplate
    }
    else
    {
        //Default Content
        <img src="https://media0.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif" />
    }
}

else if (List.Count == 0)
{
    @if (EmptyTemplate != null)
    {
        @EmptyTemplate
    }
    else
    {
        //Default Content
        <text>There no records to show</text>
    }
}
else
{
    @*<input type="checkbox" @onchange="@(() => displayButtons = !displayButtons)" />*@

    @if (Elements != null)
    {
        @foreach (var element in List)
        {
            @Elements(element)
        }
    }
    else
    {
        @WholeListTempalte
    }

}

@code {

    [Parameter] public RenderFragment NullTemplate { get; set; }
    [Parameter] public RenderFragment EmptyTemplate { get; set; }
    [Parameter] public RenderFragment<TItem> Elements { get; set; }
    [Parameter] public RenderFragment WholeListTempalte { get; set; }
    [Parameter] public List<TItem> List { get; set; }

}
